{
        "name"       : "sylvera/wp-yaml",
        "description": "Yaml resource registration for WordPress",
        "homepage"   : "http://wp-yaml.com",
        "type"       : "wordpress-muplugin",
        "license"    : "GPL-2.0+",
        "authors"    : [
                {
                        "name"    : "Nicholas Bateman",
                        "homepage": "http://wp-yaml.com/"
                }
        ],
        "autoload" : {
            "psr-4" : {
                "WpYaml\\" : "src"
            }
        },
        "require": {
                "composer/installers":      "2.x",
                "symfony/yaml":             "5.x",
                "symfony/finder":           "5.x"

        },
        "require-dev": {
                "wp-coding-standards/wpcs": "2.x",
                "humanmade/psalm-plugin-wordpress": "^2.0",
                "phpunit/phpunit": "^9.5"
        },
        "scripts": {
            "post-install-cmd": [
                "./scripts/symlink.sh"
            ]
        },
        "config": {
                "allow-plugins": {
                        "composer/installers": true
                }
        }
}
